{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ asset('build/js/bootstrap-show-password.js') }}"></script>#}

    {#<script src="{{ asset('build/js/jquery/maskedinput.js') }}"></script>#}
    {#<script src="{{ asset('build/js/jquery/intlTelInput.js') }}"></script>#}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/bootstrap/formhelpers.css') }}">
    <link rel="stylesheet" href="{{ asset('build/css/jquery/intlTelInput.css') }}">
    <link rel="stylesheet" href="{{ asset('build/css/jquery/countrySelect.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/gijgo/1.7.2/combined/css/gijgo.min.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}
    Registration
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-md-12">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-3">Registration</h1>
                    <p class="lead">Please complete all fields to have access to The Secret Shop!</p>
                </div>
            </div>
        </div>

    </div>

    <div class="row justify-content-md-center login-form-row">
        <div class="col-md-offset-3 col-md-6">
            {{ form_start(form) }}
                <div class="form-row">
                    <div class="form-group col-md-4">
                        {#<label for="inputUsername">Username</label>#}
                        <input type="text"
                               class="form-control"
                               id="inputUsername"
                               placeholder="Username"
                               name="{{ form.username.vars.full_name }}">
                    </div>
                    <div class="form-group col-md-4">
                        {#<label for="inputEmail">Email</label>#}
                        <input type="email"
                               class="form-control"
                               id="inputEmail"
                               placeholder="Email"
                               name="{{ form.email.vars.full_name }}">

                    </div>
                    <div class="form-group col-md-4">
                        {#<label for="inputPassword">Password</label>#}
                        <input type="password"
                               class="form-control"
                               id="inputPassword"
                               placeholder="Password"
                               name="{{ form.plainPassword.vars.full_name }}"
                               data-toggle="password">
                    </div>
                </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" id="registration-firstName" name="{{ form.firstName.vars.full_name }}" placeholder="First name">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" id="registration-secondName" name="{{ form.secondName.vars.full_name }}" placeholder="Last name">
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" id="registration-dateBirthday" name="{{ form.secondName.vars.full_name }}" placeholder="Date birthday">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" id="registration-country" name="{{ form.country.vars.full_name }}" class="form-control">

                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control bfh-phone" id="registration-phone" name="{{ form.phone.vars.full_name }}" >
                </div>
            </div>



                <button type="submit" class="btn btn-success">Register!</button>
    {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}